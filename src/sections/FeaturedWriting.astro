---
import Tag from '~/components/Tag.astro';
import Card from '../components/Card.astro';
import Heading from '../components/Heading.astro';
import Link from '../components/Link.astro';
import { getCollection } from 'astro:content';
import FormattedDate from '~/components/FormattedDate.astro';
import type { CollectionEntry } from 'astro:content';

type Props = CollectionEntry<'blog'>['data'];

const blogCollection = await getCollection('blog');
const featuredWriting = blogCollection.slice(-2).reverse();

const currentPath = Astro.url.pathname;
---

<section id="featured-writing">
  <Heading level="h2" size="3xl">featured writing</Heading>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    {
      featuredWriting.map((post) => (
        <Card class="group" key={post.id} variant="transparent">
          <header>
            <Heading
              level="h3"
              size="2xl"
              class="mb-0 group-hover:text-accent transition-all"
            >
              {post.data.title}
            </Heading>
            <FormattedDate
              classes="text-sm"
              date={post.data.pubDate ?? new Date()}
            />
          </header>
          <div class="w-full">
            <img
              src={post.data.heroImage}
              alt={post.data.title}
              class="rounded-md"
            />
          </div>
          <p class="line-clamp-2">{post.data.description}</p>
          {post.data.tags && post.data.tags.length > 0 && (
            <div>
              <ul class="flex flex-wrap gap-2">
                {post.data.tags.map((tag) => (
                  <Tag key={tag} name={tag}>
                    #{tag}
                  </Tag>
                ))}
              </ul>
            </div>
          )}
          <div class="flex flex-col gap-4 md:flex-row">
            <Link href={`/writing/${post.id}`} variant="primary" size="button">
              Read more
            </Link>
          </div>
        </Card>
      ))
    }
  </div>
  {
    currentPath === '/' && (
      <Link
        href="/writing"
        withIcon={true}
        class="group-hover:text-foreground text-lg"
      >
        view all writing
      </Link>
    )
  }
</section>
